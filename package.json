{
	"name": "codereplay",
	"displayName": "CodeReplay",
	"description": "Records and replays coding sessions for creating tutorials.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codereplay.startRecording",
		"onCommand:codereplay.stopRecording",
		"onCommand:codereplay.startPlayback"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codereplay.startRecording",
				"title": "CodeReplay: Start Recording"
			},
			{
				"command": "codereplay.stopRecording",
				"title": "CodeReplay: Stop Recording"
			},
			{
				"command": "codereplay.startPlayback",
				"title": "CodeReplay: Start Playback"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.83.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"glob": "^10.3.10",
		"mocha": "^10.2.0",
		"typescript": "^5.3.3",
		"@vscode/test-electron": "^2.3.8"
	}
}